<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Hogwarts" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/actionbar</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/actionbar</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">#131313</item>
        <item name="android:textColorPrimary">#ffffff</item>
    </style>

    <style name="Theme.Hogwarts" parent="Base.Theme.Hogwarts" />

    <style name="Theme.Hogwarts.Dialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorOnPrimary">@color/actionbar</item>
    </style>

</resources>